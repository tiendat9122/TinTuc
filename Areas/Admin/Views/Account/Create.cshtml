@model WebNews.Models.Account

<div class="main-content">
	<div class="main-content-inner">
		<div class="breadcrumbs ace-save-state" id="breadcrumbs">
			<ul class="breadcrumb">
				<li>
					<i class="ace-icon fa fa-home home-icon"></i>
					<a href="#">Admin</a>
				</li>

				<li>
					<a asp-area="Admin" asp-controller="Account" asp-action="Index">Quản lý Tài khoản</a>
				</li>
				<li class="active">Thêm mới</li>
			</ul><!-- /.breadcrumb -->
		</div>

		<div class="page-content">
			<div class="page-header">
				<h1>
					Thêm mới Tài khoản
				</h1>
			</div><!-- /.page-header -->

			<div class="row">
				<div class="col-xs-12">
					<!-- PAGE CONTENT BEGINS -->
					<form class="form-horizontal" role="form" asp-action="Create" method="post" enctype="multipart/form-data">
						<input type="hidden" asp-for="AccountID"/>

						<div class="form-group">
							<label asp-for="FullName" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Tên tài khoản </label>

							<div class="col-sm-9">
								<input asp-for="FullName" type="text" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" required="required" />
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group">
							<label asp-for="Email" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Địa chỉ Email </label>

							<div class="col-sm-9">
								<input asp-for="Email" type="email" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" required="required" />
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group">
							<label asp-for="Password" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Mật khẩu </label>

							<div class="col-sm-9">
								<input asp-for="Password" type="password" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" required="required" />
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group">
							<label asp-for="RoleID" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Quyền truy cập </label>

							<div class="col-sm-9">
								<select asp-for="RoleID" asp-items="ViewBag.RoleId" class="col-xs-10 col-sm-5" required>
									<option label="---- Lựa chọn ----"></option>
								</select>
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group" style="margin-bottom: inherit;">
							@* <label asp-for="Avatar" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Ảnh đại diện </label>

							<div class="col-sm-9">
								<input asp-for="Avatar" type="text" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" />
							</div> *@

							<label asp-for="Avatar" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Ảnh đại diện </label>

							<div class="input-group col-sm-9" style="margin-left:8px;">
								<div class="input-group-prepend col-xs-10 col-sm-5">
									<button class="btn btn-primary" type="button" style="padding-top: 4.9px;" onclick="openDialog()">Chọn ảnh</button><input class="text_input" type="text" style=" padding: 3px 4px 6px; "
									asp-for="Avatar" id="file_input" aria-describedby="button-addon2" required="required" />
								</div>
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group" style="margin-bottom: inherit;">
							<label asp-for="Active" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Trạng thái </label>

							<div class="col-sm-9" style="margin-top:8px;padding-left:24px;">
								@Html.CheckBox("Active", false)
								Cho phép
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group">
							<label asp-for="Gender" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Giới tính </label>

							<div class="col-sm-9">
								@* <input asp-for="Gender" type="number" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" /> *@
								<input type="radio" value="1" asp-for="Gender" style="margin-left:20px" /> <span>Nam</span>
                                <input type="radio" value="2" asp-for="Gender" style="margin-left:40px" /> <span>Nữ</span>
                                <input type="radio" value="3" asp-for="Gender" style="margin-left:40px" /> <span>Khác</span>
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group">
							<label asp-for="Birthday" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Ngày sinh </label>

							<div class="col-sm-9">
								<input asp-for="Birthday" type="date" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" required="required" />
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group">
							<label asp-for="Story" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Tiểu sử </label>

							<div class="col-sm-9">
								<input asp-for="Story" type="text" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" required="required" />
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group">
							<label asp-for="Message" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Thông điệp </label>

							<div class="col-sm-9">
								<input asp-for="Message" type="text" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" required="required" />
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group">
							<label asp-for="Address" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Địa chỉ </label>

							<div class="col-sm-9">
								<input asp-for="Address" type="text" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" required="required" />
							</div>
						</div>

						<div class="clearfix form-actions">
							<div class="col-md-offset-3 col-md-9">
								<button class="btn btn-success" type="submit">
									<i class="ace-icon fa fa-check bigger-110"></i>
									Xác nhận
								</button>

								&nbsp; &nbsp; &nbsp;
								<a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn" type="reset">
									<i class="ace-icon fa fa-undo bigger-110"></i>
									Quay lại
								</a>
							</div>
						</div>
					</form>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.page-content -->
	</div>
</div><!-- /.main-content -->

@{
	var summernote = new WebNews.Models.Summernote("#Contents");
}

@section ScriptsAdmin {
	<partial name="_Summernote" model="summernote" />
}
