@model WebNews.Areas.Admin.Models.ChangePasswordViewModel;

<div class="main-content">
	<div class="main-content-inner">
		<div class="breadcrumbs ace-save-state" id="breadcrumbs">
			<ul class="breadcrumb">
				<li>
					<i class="ace-icon fa fa-home home-icon"></i>
					<a href="#">Admin</a>
				</li>

				<li class="active">Đổi mật khẩu</li>
			</ul><!-- /.breadcrumb -->
		</div>

		<div class="page-content">
			<div class="page-header">
				<h1>
					Đổi mật khẩu
				</h1>
			</div><!-- /.page-header -->

			<div class="row">
				<div class="col-xs-12">
					<!-- PAGE CONTENT BEGINS -->
                    @* <div class="clearfix">
                        <div class="pull-left alert alert-success no-margin alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert">
                                <i class="ace-icon fa fa-times"></i>
                            </button>

                            <i class="ace-icon fa fa-check bigger-120 blue"></i>
                            Bạn đã đổi mật khẩu thành công lúc @DateTime.Now !
                        </div>
                    </div> *@

                    @Html.Raw(ViewBag.ChangePasswordSuccess)

                    @Html.Raw(ViewBag.PasswordFail)

                    <div class="space-12"></div>

					<form class="form-horizontal" role="form" asp-action="ChangePassword" method="post" enctype="multipart/form-data">
						@* <input type="hidden" asp-for="AccountID"/> *@

						<div class="form-group">
							<label asp-for="PasswordNow" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Mật khẩu cũ </label>

							<div class="col-sm-9">
								<input asp-for="PasswordNow" type="password" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" />
							</div>
						</div>

						<div class="space-16"></div>

						<div class="form-group">
							<label asp-for="Password" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Mật khẩu mới </label>

							<div class="col-sm-9">
								<input asp-for="Password" type="password" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" />
							</div>
						</div>

						<div class="space-4"></div>

						<div class="form-group">
							<label asp-for="ConfirmPassword" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Nhập lại mật khẩu </label>

							<div class="col-sm-9">
								<input asp-for="ConfirmPassword" type="password" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" />
							</div>
						</div>

						<div class="clearfix form-actions">
							<div class="col-md-offset-3 col-md-9">
								<button class="btn btn-success" type="submit">
									<i class="ace-icon fa fa-check bigger-110"></i>
									Xác nhận
								</button>

								&nbsp; &nbsp; &nbsp;
								<a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn" type="reset">
									<i class="ace-icon fa fa-undo bigger-110"></i>
									Quay lại
								</a>
							</div>
						</div>
					</form>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.page-content -->
	</div>
</div><!-- /.main-content -->
