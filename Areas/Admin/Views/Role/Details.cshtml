@model WebNews.Models.Role

<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="#">Home</a>
							</li>

							<li>
								<a asp-area="Admin" asp-controller="Role" asp-action="Index">Quản lý Quyền truy cập</a>
							</li>
							<li class="active">Chi tiết</li>
						</ul><!-- /.breadcrumb -->
					</div>

					<div class="page-content">
						<div class="page-header">
							<h1>
								Chi tiết Quyền truy cập
							</h1>
						</div><!-- /.page-header -->

						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
								<div>
									<div id="user-profile-1" class="user-profile row">

										<div class="">

											<div class="space-12"></div>

											<div class="profile-user-info profile-user-info-striped">
												<div class="profile-info-row">
													<label asp-for="RoleID" class="profile-info-name"> Mã quyền</label>

													<div class="profile-info-value">
														<span class="editable" id="username">@Model.RoleID</span>
													</div>
												</div>

												<div class="profile-info-row">
													<label asp-for="RoleName" class="profile-info-name"> Tên quyền </label>

													<div class="profile-info-value">
														<span class="editable" id="city">@Model.RoleName</span>
													</div>
												</div>

                                                <div class="profile-info-row">
													<label asp-for="RoleDescription" class="profile-info-name"> Mô tả </label>

													<div class="profile-info-value">
														<span class="editable" id="username">@Model.RoleDescription</span>
													</div>
												</div>
											</div>

											<div class="space-6"></div>

											<div class="center">
                                                <form asp-action="Details" method="post">
                                                    <input type="hidden" asp-for="RoleID" />
                                                    <a asp-area="Admin" asp-controller="Role" asp-action="Edit" asp-route-id="@Model.RoleID" class="btn btn-sm btn-primary btn-white btn-round">
                                                        <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                        <span class="bigger-110">Chỉnh sửa</span>
                                                    </a>
                                                    <a asp-area="Admin" asp-controller="Role" asp-action="Index" type="button" class="btn btn-sm btn-success btn-white btn-round">
                                                        <i class="menu-icon fa fa-list"></i>
                                                        <span class="bigger-110">Về danh sách</span>

                                                        <i class="icon-on-right ace-icon fa fa-arrow-right"></i>
                                                    </a>
                                                </form>
											</div>
										</div>
									</div>
								</div>
								<!-- PAGE CONTENT ENDS -->
							</div><!-- /.col -->
						</div><!-- /.row -->
					</div><!-- /.page-content -->
				</div>
			</div><!-- /.main-content -->