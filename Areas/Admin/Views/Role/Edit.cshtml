@model WebNews.Models.Role

<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="#">Admin</a>
							</li>

							<li>
								<a asp-area="Admin" asp-controller="Role" asp-action="Index">Quản lý quyền truy cập</a>
							</li>
							<li class="active">Chỉnh sửa</li>
						</ul><!-- /.breadcrumb -->
					</div>

					<div class="page-content">
						<div class="page-header">
							<h1>
								Chỉnh sửa Quyền truy cập
							</h1>
						</div><!-- /.page-header -->

						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
								<form class="form-horizontal" role="form" asp-action="Edit" method="post">
									<input type="hidden" asp-for="RoleID"/>

									<div class="form-group">
										<label asp-for="RoleName" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Tên quyền </label>

										<div class="col-sm-9">
											<input asp-for="RoleName" type="text" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" />
										</div>
									</div>

									<div class="space-4"></div>

									<div class="form-group">
										<label asp-for="RoleDescription" class="col-sm-3 control-label no-padding-right" for="form-field-1"> Mô tả </label>

										<div class="col-sm-9">
											<input asp-for="RoleDescription" type="text" id="form-field-1" placeholder="" class="col-xs-10 col-sm-5" />
										</div>
									</div>

									<div class="clearfix form-actions">
										<div class="col-md-offset-3 col-md-9">
											<button class="btn btn-info" type="submit">
												<i class="ace-icon fa fa-check bigger-110"></i>
												Lưu lại
											</button>

											&nbsp; &nbsp; &nbsp;
											<a asp-area="Admin" asp-controller="Role" asp-action="Index" class="btn" type="reset">
												<i class="ace-icon fa fa-undo bigger-110"></i>
												Quay lại
											</a>
										</div>
									</div>
								</form>
							</div><!-- /.col -->
						</div><!-- /.row -->
					</div><!-- /.page-content -->
				</div>
			</div><!-- /.main-content -->