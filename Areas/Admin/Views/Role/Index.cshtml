<script type="text/javascript">
    jQuery(function ($) {
        var myTable =
            $('#dynamic-table')
                .DataTable({
                    bAutoWidth: false,
                    "processing": true,
                    "serverSide": false,
                    "filter": true,
                    "orderMulti": true,
                    "ajax": {
                        "url": "/Admin/Role/GetData",
                        "type": "POST",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "RoleID", "autoWitdh": true },
                        { "data": "RoleName", "autoWitdh": false },
                        { "data": "RoleDescription", "autoWitdh": false },
                        {
                            "render": function (data, type, full, meta) { 
                                return '<a class="btn btn-xs btn-info" href="/Admin/Role/Edit/' + full.RoleID + '"><i class="ace-icon fa fa-pencil bigger-120"></i></a> ' + 
                                '<a class="btn btn-xs btn-danger" href="/Admin/Role/Delete/' + full.RoleID + '"><i class="ace-icon fa fa-trash-o bigger-120"></i></a> ' + 
                                '<a class="btn btn-xs btn-warning" href="/Admin/Role/Details/' + full.RoleID + '"><i class="ace-icon fa fa-search-plus bigger-130"></i></a>'; 
                            }
                        }
                    ]
                });
    });
</script>
